<Window x:Class="LoginForm.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginForm"
        mc:Ignorable="d"
        Title="Login Page" Height="600" Width="600" FontSize="30" Background="Beige">
    <Border Background="BlanchedAlmond" CornerRadius="40" Margin="40">
        <StackPanel Margin="40">
        <Label Content="Login" Foreground="Black" FontSize="50" HorizontalAlignment="Center"></Label>
            <Separator>
                
            </Separator>
            <Label Content="Username: " Foreground="Black"/>
            <TextBox x:Name="txtUsername" Background="White" Foreground="Black" FontSize="25" />
            <Label Content="Password: " Foreground="Black"/>
            <PasswordBox x:Name="txtPassword" Background="White" Foreground="Black" FontSize="25"/>
            <Button Name="onSubmit" Click="btnSubmit_Click" Content="Submit" Margin="30 15"  Background="Wheat" Foreground="Black" FontSize="25"/>
        </StackPanel>
    </Border>
</Window>
